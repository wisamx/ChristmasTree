                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <Button Content="Button" Margin="214,102.52,133,184.52" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-49.855"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </TabControl>
    </Grid>
