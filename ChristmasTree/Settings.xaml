                    </Grid.ColumnDefinitions>
                    <RadioButton HorizontalAlignment="Center" Name="radioButton1" VerticalAlignment="Center" />
                    <RadioButton HorizontalAlignment="Center" Name="radioButton2" VerticalAlignment="Center" Grid.Row="1" />
